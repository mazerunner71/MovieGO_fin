@model MovieGO.Models.Hall

@{
    ViewData["Title"] = "Dodaj sale";
}

<h1>Dodaj sale</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RowCount" class="control-label"></label>
                <input asp-for="RowCount" class="form-control" />
                <span asp-validation-for="RowCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColumnCount" class="control-label"></label>
                <input asp-for="ColumnCount" class="form-control" />
                <span asp-validation-for="ColumnCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CinemaId" class="control-label"></label>
                <select asp-for="CinemaId" class ="form-control" asp-items="ViewBag.CinemaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="mt-3 btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
