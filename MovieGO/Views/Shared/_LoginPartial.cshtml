@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{

        <a class="nav-link text-dark me-3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Zalogowany jako @User.Identity?.Name!</a>

        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-light text-dark me-2">Wyloguj</button>
        </form>
}
else
{
    
        <button type="button" class="btn btn-light text-dark me-2">
                <a class="text-decoration-none text-dark" asp-area="Identity" asp-page="/Account/Login">Logowanie</a>
        </button>
            <button type="button" class="btn btn-primary"><a class="text-decoration-none text-white" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a></button>

}

